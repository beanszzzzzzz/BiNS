    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f5e6d3 0%, #d7ccc8 100%);
            min-height: 100vh;
        }

        .container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background: linear-gradient(180deg, #6d4c41 0%, #4e342e 100%);
            padding: 20px;
            box-shadow: 4px 0 10px rgba(0,0,0,0.1);
        }

        .sidebar-header {
            text-align: center;
            padding: 20px 0;
            border-bottom: 2px solid #8d6e63;
            margin-bottom: 30px;
        }

        .sidebar-header h2 {
            color: #fff;
            font-size: 24px;
            margin-bottom: 5px;
        }

        .sidebar-header p {
            color: #bcaaa4;
            font-size: 12px;
        }

        .nav-menu {
            list-style: none;
        }

        .nav-item {
            margin-bottom: 10px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 15px;
            color: #efebe9;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .nav-link:hover {
            background: #5d4037;
            transform: translateX(5px);
        }

        .nav-link.active {
            background: #8d6e63;
            color: #fff;
        }

        .nav-icon {
            margin-right: 15px;
            font-size: 20px;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            padding: 40px;
        }

        .header {
            background: #fff;
            padding: 25px 30px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }

        .header h1 {
            color: #4e342e;
            font-size: 32px;
            margin-bottom: 5px;
        }

        .header p {
            color: #8d6e63;
            font-size: 14px;
        }

        /* Dashboard Cards */
        .dashboard-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .card {
            background: #fff;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            cursor: pointer;
            transition: all 0.3s ease;
            border-left: 5px solid;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .card.products { border-left-color: #795548; }
        .card.stocks { border-left-color: #a1887f; }
        .card.orders { border-left-color: #8d6e63; }

        .card-icon {
            font-size: 40px;
            margin-bottom: 15px;
        }

        .card h3 {
            color: #4e342e;
            font-size: 18px;
            margin-bottom: 10px;
        }

        .card .number {
            font-size: 32px;
            font-weight: bold;
            color: #6d4c41;
        }

        /* Table */
        .table-container {
            background: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .table-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .table-header h2 {
            color: #4e342e;
            font-size: 24px;
        }

        .btn-new {
            background: linear-gradient(135deg, #6d4c41 0%, #5d4037 100%);
            color: #fff;
            padding: 12px 25px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            font-size: 14px;
            transition: all 0.3s ease;
        }

        .btn-new:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(109, 76, 65, 0.3);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background: #efebe9;
        }

        th {
            padding: 15px;
            text-align: left;
            color: #4e342e;
            font-weight: 600;
            border-bottom: 2px solid #d7ccc8;
        }

        tbody tr {
            border-bottom: 1px solid #efebe9;
            transition: background 0.2s ease;
        }

        tbody tr:hover {
            background: #fafafa;
        }

        td {
            padding: 15px;
            color: #6d4c41;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #8d6e63;
        }

        .empty-state-icon {
            font-size: 64px;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .action-links {
            display: flex;
            gap: 10px;
        }

        .action-links a {
            color: #6d4c41;
            text-decoration: none;
            padding: 5px 12px;
            border-radius: 5px;
            transition: all 0.2s ease;
            font-size: 14px;
        }

        .action-links a:hover {
            background: #efebe9;
        }
    </style>
</head>
