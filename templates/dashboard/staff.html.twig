{% extends 'base.html.twig' %}

{% block title %}BiNS Cafe - Staff Dashboard{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <!-- Welcome Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-user-tie text-primary me-2"></i>Staff Dashboard
            </h1>
            <p class="text-muted mt-1">Welcome back, {{ app.user.firstName ?? app.user.email }}! Ready to serve?</p>
        </div>
        <div class="text-end">
            <span class="badge bg-primary">
                <i class="fas fa-user me-1"></i>Staff Access
            </span>
            <span class="badge bg-info ms-2">
                <i class="fas fa-clock me-1"></i>{{ "now"|date("h:i A") }}
            </span>
        </div>
    </div>

    <!-- Staff Actions Grid -->
    <div class="row mb-4">
        <!-- Create Order -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="fas fa-plus-circle fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title text-center mb-3">Create Order</h5>
                    <p class="card-text text-center">Take new customer orders</p>
                    <div class="text-center mt-3">
                        <a href="{{ path('orders_new') }}" class="btn btn-primary w-100">
                            <i class="fas fa-plus me-2"></i>New Order
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- View Products -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="fas fa-mug-hot fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title text-center mb-3">View Menu</h5>
                    <p class="card-text text-center">Browse available products</p>
                    <div class="text-center mt-3">
                        <a href="{{ path('products_index') }}" class="btn btn-success w-100">
                            <i class="fas fa-list me-2"></i>View Products
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- View Orders -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="fas fa-receipt fa-3x text-warning"></i>
                    </div>
                    <h5 class="card-title text-center mb-3">Manage Orders</h5>
                    <p class="card-text text-center">View and update orders</p>
                    <div class="text-center mt-3">
                        <a href="{{ path('orders_index') }}" class="btn btn-warning w-100">
                            <i class="fas fa-eye me-2"></i>View Orders
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Check Inventory -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="fas fa-boxes fa-3x text-info"></i>
                    </div>
                    <h5 class="card-title text-center mb-3">Inventory</h5>
                    <p class="card-text text-center">Check stock levels</p>
                    <div class="text-center mt-3">
                        <a href="{{ path('stocks_index') }}" class="btn btn-info w-100">
                            <i class="fas fa-clipboard-check me-2"></i>Check Stock
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Today's Summary -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-chart-bar me-2"></i>Today's Summary
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 col-6 mb-3">
                            <div class="h4 mb-0 text-primary">{{ ordersHandled|default(0) }}</div>
                            <small class="text-muted">Orders Handled</small>
                        </div>
                        <div class="col-md-3 col-6 mb-3">
                            <div class="h4 mb-0 text-success">â‚±{{ totalSales|default('0.00')|number_format(2) }}</div>
                            <small class="text-muted">Total Sales</small>
                        </div>
                        <div class="col-md-3 col-6 mb-3">
                            <div class="h4 mb-0 text-warning">{{ pendingOrders|default(0) }}</div>
                            <small class="text-muted">Pending Orders</small>
                        </div>
                        <div class="col-md-3 col-6 mb-3">
                            <div class="h4 mb-0 text-info">{{ tablesServed|default(0) }}</div>
                            <small class="text-muted">Tables Served</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Orders & Tasks -->
    <div class="row">
        <!-- Active Orders -->
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-fire me-2"></i>Active Orders
                    </h6>
                    <span class="badge bg-danger">{{ activeOrderCount|default(0) }} Pending</span>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Table #</th>
                                    <th>Order Items</th>
                                    <th>Time</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if activeOrders|default([]) is not empty %}
                                    {% for order in activeOrders %}
                                        <tr>
                                            <td>{{ order.tableNumber|default('Takeout') }}</td>
                                            <td>{{ order.itemsCount }} items</td>
                                            <td>{{ order.waitingTime }} mins ago</td>
                                            <td>
                                                <span class="badge bg-{{ order.status == 'preparing' ? 'warning' : 'info' }}">
                                                    {{ order.status|title }}
                                                </span>
                                            </td>
                                            <td>
                                                <a href="{{ path('orders_show', {id: order.id}) }}" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i>View
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center py-4">
                                            <div class="text-muted">
                                                <i class="fas fa-check-circle fa-2x mb-3"></i>
                                                <p>No active orders at the moment</p>
                                            </div>
                                        </td>
                                    </tr>
                                {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Today's Tasks -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-tasks me-2"></i>Today's Tasks
                    </h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        {% if todaysTasks|default([]) is not empty %}
                            {% for task in todaysTasks %}
                                <div class="list-group-item d-flex align-items-center">
                                    <input class="form-check-input me-3" type="checkbox" 
                                           {{ task.completed ? 'checked disabled' : '' }}>
                                    <div class="flex-grow-1">
                                        <div>{{ task.description }}</div>
                                        <small class="text-muted">{{ task.time }}</small>
                                    </div>
                                    <span class="badge bg-{{ task.priority == 'high' ? 'danger' : task.priority == 'medium' ? 'warning' : 'secondary' }}">
                                        {{ task.priority|default('low') }}
                                    </span>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="text-center py-4">
                                <i class="fas fa-check-circle fa-2x text-success mb-3"></i>
                                <p class="text-muted">No tasks assigned for today</p>
                            </div>
                        {% endif %}
                    </div>
                    <div class="mt-3 text-center">
                        <button class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-plus me-1"></i>Add Task
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}